{% extends 'base.html.twig' %}

{% block title %}Bienvenidos a cibermania{% endblock %}
{% block sidebar %}
	{% if app.user.person is defined %}
    <div id="mySidenav" class="sidenav">
        <a href="javascript:void(0)" class="closebtn" >&times;</a>

        <div id="search" class="col-12">
             <form method="get" action="{{ path('search') }}">
              <div class="form-group">
                <input type="text" class="form-control" name="data" id="slug" placeholder="Buscar" />
               </div> 
            </form>
        </div>
            <div class="card mb-3">
              <img alt="{{app.user.person.name}}" class="rounded-circle mx-auto" width="150" height="150" src="{{ asset(app.user.person.picture?:'johndoe.png', 'profile') }}">
              <div class="container">
                <h1>{{ app.user.person.name|capitalize }}</h1>
                <p class="title">{{ app.user.roles[0] == "ROLE_USER" ? 'Usuario' : 'Administrador' }}</p>
                <ul>
                  <li><a href="{{ path('my_post') }}">Mis Post</a></li>
                  <li><a href="{{ path('edit_profile') }}">Mi Perfil</a></li>
                  <li><a class="logout" href="{{ path('user_logout') }}">Desconectar</a></li>
                </ul>
                <ul>
                    <li><a href="https://www.youtube.com/user/cibermaniasful"><i class="fa fa-youtube"></i></a></li>
                    <li><a href="https://twitter.com/CibErMaNias"><i class="fa fa-twitter"></i></a></li>
                    <li><a href="#"><i class="fa fa-linkedin"></i></a></li>
                    <li><a href="https://www.facebook.com/Cibermanias.es/"><i class="fa fa-facebook"></i></a></li>
                </ul>
              </div>
            </div>
        {#%   else %}
            {{ render(controller('AppBundle:Security:boxLogin')) }}
        {% endif %} 
        <div class="col-12 menu">
            <a href="{{ path('page', { pageName: 'cibermania' }) }}">¿Qué es cibermania?</a>
            <a href="{{ path('contact') }}">Contacto</a>
            <a href="{{ path('page', { pageName: 'ayuda' }) }}">Ayuda</a>
            <a href="{{ path('page', { pageName: 'aviso' }) }}">Aviso Legal</a>
        </div>#}
    </div>
    {% endif %} 

{% endblock %}
{% block body %}
    {% block id %}{% endblock %}

<div class="container-fluid main">
    {% block header %}
        <section id="featured-section">
            <div class="row">
                <div class="container">

                    <div class="col-12">
                        <span class="time-today">{{ "now"|dateFormat}}</span>
                        <nav class="nav-home">
                            <ul>
                                {% if app.user.person is defined %}
                                    <li>Conectado como: {{ app.user.person.name|capitalize }}</li>
                                {% else %}
                                    <li class="login-in" data-close="1">Conectarse</li>
                                    <li><a href="{{ path('create_account') }}">Registro</a></li>
                                    <li><a href="{{ path('contact') }}">Contacto</a></li>
                                    <li><a href="{{ path('page', { pageName: 'aviso' }) }}">Aviso Legal</a></li>
                                    <li><a href="{{ path('page', { pageName: 'ayuda' }) }}">Ayuda</a></li>
                                {% endif %}
                            </ul>
                            <div class="sign-in">
                                {{ render(controller('AppBundle:Security:boxLogin')) }}
                            </div>
                        </nav>
                    </div>
                </div>
                {#{% for featured in featureds %}

                    <div class="col-md-4 featured-item">
                        <img class="d-block img-fluid" src="{{ asset(featured.imgPost,'post') }}" alt="{{ featured.title }}" title="{{ featured.title }}">
                        <a href="{{ path('view_post', { slug: featured.slug}) }}">{{ featured.title }}</a>
                    </div>
                {% endfor %}#}
            </div>

        </section>
        <nav class="navbar navbar-toggleable-md navbar-light bg-faded">
            <div class="container">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                {% if app.user.person is defined %}
                    <img alt="Ver Perfil" id="opennav" title="Ver Perfil" class="rounded-circle mx-auto " width="60" height="60" src="{{ asset(app.user.person.picture?:'johndoe.png', 'profile') }}">
                {% endif %}

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto cb-menu">
                        <li class="nav-item {{ app.request.pathinfo=='/' ? 'active' : '' }}">
                            <a class="nav-link" href="{{ path('homepage') }}">Inicio <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item {{ app.request.pathinfo=='/info/cibermania/' ? 'active' : '' }}">
                            <a class="nav-link" href="{{ path('page', { pageName: 'cibermania' }) }}">¿Que es cibermania? </a>
                        </li>
                        <li class="nav-item {{ app.request.pathinfo=='/info/participa/' ? 'active' : '' }}">
                            <a class="nav-link" href="{{ path('page', { pageName: 'participa' }) }}">Participa </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

    {% endblock %}

    {% block section %}

    {% endblock %}

</div>
{% endblock %}

{% block footer %}
    {{ include('front/footer.html.twig') }}

{% endblock %}
