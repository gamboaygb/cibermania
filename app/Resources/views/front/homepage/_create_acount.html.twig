{% extends 'front/frontend.html.twig' %}
{% block title %}Crear Cuenta en cibermania{% endblock %}
{% block section %}

    <div class="container mt-5">
        <div class="col-12">
            <div class="diviver">
                <ul class="d-flex pl-0 mr-auto">
                    <li class="nav-item ">
                        <a class="nav-link pl-0 pr-1" href="/"><i class="fa fa-home" aria-hidden="true"></i><span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link pl-0 pr-1" href="#"> > </a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link pl-0 pr-1" href="#">Registro </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="col-12">
            <h3 class="text-center">Crea una cuenta en menos de 1 minuto y conviertete en cibermaniatico</h3>
            <p class="text-center"><code>Tus datos jamás serán públicos</code></p>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-8 mx-auto mt-5 mb-5">
           {{ form_start(form, {'attr': {'class': 'my-form-class'} }) }}

                <div class="form-group">
                    {{ form_widget(form.person.name) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.person.lastName) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.user.email) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.user.passwordClear) }}
                </div>
                <div class="form-group">
                    <div class="input-file-container">
                        {{ form_widget(form.person.photoPath) }}
                        <label tabindex="0" for="my-file" class="input-file-trigger">Subir foto</label>
                    </div>
                </div>
            <div class="form-group">
                <img id="img-salida" class="img-thumbnail" src="{{ asset('johndoe.png','profile') }}" width="200" height="200">
            </div>
            {{ form_end(form) }}
            <p class="#mjs-error"></p>
        </div>
    </div>
{% endblock %}


