<div class="col-xs-12 col-sm-12 col-md-8 mx-auto">
    {{ form_start(form, {'attr': {'class': 'my-form-class'} }) }}

    <div class="form-group">
        {{ form_widget(form.person.name) }}
    </div>
    <div class="form-group">
        {{ form_widget(form.person.lastName) }}
    </div>
    <div class="form-group">
        {{ form_widget(form.user.email) }}
    </div>
    <div class="form-group">
        {{ form_widget(form.user.passwordClear) }}
    </div>
    <div class="form-group">
        {% if action is defined and  action == 'user_profile' %}
            <img class="img-thumbnail" src="{{ asset(app.user.person.picture, 'profile') }}" width="100"/>
            {{ form_widget(form.person.photoPath) }}
        {% endif %}

    </div>
    {{ form_end(form) }}
</div>