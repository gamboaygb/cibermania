{% extends 'front/frontend.html.twig' %}
{% block section %}
    <section class="container">
        <div class="col-xs-12 col-sm-12 col-md-12">
            {{ form_start(form, {'attr': {'class': 'my-form-class'} }) }}

            <div class="form-group">
                {{ form_widget(form.person.name) }}
            </div>
            <div class="form-group">
                {{ form_widget(form.person.lastName) }}
            </div>
            <div class="form-group">
                {{ form_widget(form.user.email) }}
            </div>
            <div class="form-group">
                {{ form_widget(form.user.passwordClear) }}
            </div>
            <div class="form-group">
                {% if action == 'user_profile' %}
                    <img class="img-thumbnail" src="{{ asset(app.user.person.picture, 'profile') }}" width="100"/>
                {% endif %}
                {{ form_widget(form.person.photoPath) }}
            </div>
            {{ form_end(form) }}
        </div>
    </section>
{% endblock %}
{% block js %}
    <script src="//cdn.ckeditor.com/4.7.1/standard/ckeditor.js"></script>
    <script>
        CKEDITOR.replace( 'appbundle_regiser[description]' );
    </script>
{% endblock %}